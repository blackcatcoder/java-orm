		<class>com.hibernate.entity.Project</class>

		<class>com.hibernate.entity.Message</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>
			<property name="javax.persistence.jdbc.driver"
				value="org.h2.Driver" />
