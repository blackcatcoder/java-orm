<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">


	<persistence-unit name="hibernate-core">
		<description>Persistence unit for the JPA tutorial of the Hibernate Getting Started Guide</description>
		
		<!-- 1: hello -->
		<class>com.hibernate.hello.Message</class>
		
		<!-- many to many -->
		
		<class>com.hibernate.manytomany.Person</class>
		<class>com.hibernate.manytomany.PersonAddress</class>
		<class>com.hibernate.manytomany.PersonAddressId</class>
		<class>com.hibernate.manytomany.Address</class>
		 
		<class>com.hibernate.manytomany.Category</class>
		<class>com.hibernate.manytomany.Item</class>
		
		
		
		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
			<property name="javax.persistence.jdbc.url"	value="jdbc:h2:mem:hibernate-core;DB_CLOSE_DELAY=-1;MVCC=TRUE" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="" />

 			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.use_sql_comments" value="true" />
		</properties>
		
	</persistence-unit>
	

</persistence>









